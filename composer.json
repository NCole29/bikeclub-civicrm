{
    "name": "bikeclub/bikeclub-civicrm",
    "description": "Install CiviCRM and related configuration for Bike Club website.",
    "keywords": ["recipe", "bikeclub", "civicrm"],
    "type": "drupal-recipe",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Nancy Cole",
            "homepage": "https://bikeclubsites.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "civicrm/civicrm-asset-plugin": "^1.1",
        "civicrm/civicrm-core": "~5.66",
        "civicrm/civicrm-drupal-8": "~5.66",
        "civicrm/civicrm-packages": "~5.66",
        "civicrm/composer-downloads-plugin": "^3.0",
        "drupal/civicrm_entity": "^4.0@beta",
        "drupal/civicrm_group_roles-civicrm_group_roles": "^1.3",
        "drupal/civicrm_member_roles": "^1.0@beta",
		"drupal/webform_civicrm": "^6.0"
    },
    "config": {
        "civicrm/civicrm-asset-plugin": true,
        "civicrm/composer-downloads-plugin": true,
        "civicrm/composer-compile-plugin": true
    },
    "extra": {
        "compile-whitelist": ["civicrm/civicrm-core", "civicrm/composer-compile-lib"]
    }
}
